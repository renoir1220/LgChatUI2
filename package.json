{
  "name": "lgchatui2",
  "private": true,
  "scripts": {
    "dev:fe": "cd frontend && npm run dev",
    "dev:be": "cd backend && npm run start:dev",
    "dev": "concurrently \"npm run dev:be\" \"npm run dev:fe\"",
    "build:fe": "cd frontend && npm run build",
    "build:be": "cd backend && npm run build",
    "build": "npm run build:be && npm run build:fe",
    "health": "curl -f http://localhost:3000/health || echo 'Backend not ready' && curl -f http://localhost:5173 || echo 'Frontend not ready'",
    "ports": "lsof -i :3000,:5173 | grep LISTEN || echo 'No services running on default ports'",
    "crm:status": "cd backend && node scripts/crm-fallback.js status",
    "crm:test": "cd backend && node scripts/crm-fallback.js test",
    "crm:enable": "cd backend && node scripts/crm-fallback.js enable",
    "crm:auto": "cd backend && node scripts/crm-fallback.js auto",
    "crm:disable": "cd backend && node scripts/crm-fallback.js disable"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "version": "0.5.0"
}